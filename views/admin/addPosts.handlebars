{{#each errors}}

  <div class="alert alert-danger alert-dismissible fade show">
    {{text}}
    <button type="button" class="close" data-dismiss="alert" aria-label="Close">
      <span aria-hidden="true">&times;</span>
    </button>
  </div>

  {{else}}

{{/each}}

<h2>Nova postagem</h2>

<form class="mb-5" action="/admin/posts/new" method="POST" enctype="multipart/form-data">
  <div class="form-group">
    <label for="title-post">Título da postagem: </label>
    <input type="text" class="form-control" id="title-post" name="title">
  </div>

  <div class="form-group">
    <label for="slug">Slug: </label>
    <input type="text" class="form-control" id="slug" name="slug">
  </div>

  <div class="form-group">
    <label for="category">Categoria: </label>
    <select class="form-control" id="category" name="category">
        <option selected="true" value="0">Escolha uma categoria</option>
        {{#each categories}}
            <option value="{{_id}}">{{name}}</option>
        {{else}}
            <option value="0">Nenhuma categoria registrada</option>
        {{/each}}
    </select>
  </div>

  <div class="form-group">
    <label for="desc">Descrição: </label>
    <input class="form-control" id="desc" name="desc">
  </div>

  <div class="form-group text-center">
    <label for="content"><strong>Conteúdo: </strong></label>
    <textarea class="form-control" id="content" name="content" rows="10"></textarea>
  </div>

  <div class="form-group mt-5 mb-5">
    <label for="image"><strong>Imagem principal: </strong></label> <br>
    <input type="file" id="image" class="mb-4" name="image" accept="image/*" onchange="previewImage()"> <br>

    <img id="preview-img" class="preview-img">
  </div>

  <button type="submit" class="btn btn-success">Salvar postagem</button>
</form>